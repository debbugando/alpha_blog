<h1>Listagem Categoria</h1>
<div class="center">
  <%= will_paginate %>
  <% @categorias.each do |categoria| %>
  <ul class="listagem">
    <div class="row">
      <div class="well col-md-4 col-md-offset-4">
        <li class="artigo-titulo">
          <%= link_to "#{categoria.nome}", categoria_path(categoria) %>
        </li>
        <li><small><%= pluralize(categoria.artigos.count, "Artigo") %></small></li>
      </div>
    </div>
  </ul>
  <% end %>
  <%= will_paginate %>
</div>