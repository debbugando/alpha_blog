<%= form_for( :session, :html => {class: "form-horizontal", role: "form" }, url: login_path) do |form| %>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= form.label :email, 'E-mail' %>
    </div>
    <div class="control-label col-sm-8">
      <%= form.email_field :email, class: "form-control", placeholder: "E-mail", autofocus: true %>  
    </div>
  </div>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= form.label :password, 'Senha' %><br/>
    </div>
     <div class="control-label col-sm-8">
      <%= form.password_field :password, class: "form-control", placeholder: "Senha", autocomplete: "off" %>  
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit "Login", class: "btn btn-primary btn-lg" %>
      <%= link_to "Cancelar", artigos_path, class: "btn btn-default btn-lg" %>
    </div>
  </div>
<% end %>