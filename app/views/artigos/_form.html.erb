<%= render "shared/errors", obj: @artigo %>
<div class="row">
  <div class="col-md-12">
  <%= form_for( @artigo, :html => {class: "form-horizontal", role: "form" }) do |form| %>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= form.label :titulo, 'Título' %>
      </div>
      <div class="control-label col-sm-8">
        <%= form.text_field :titulo, class: "form-control", placeholder: "Titulo do Artigo", autofocus: true %>  
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= form.label :descricao, 'Descrição' %><br/>
      </div>
       <div class="control-label col-sm-8">
        <%= form.text_area :descricao, rows: 10, class: "form-control", placeholder: "Corpo do Artigo" %>  
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= form.collection_check_boxes :categoria_ids, Categoria.all, :id, :nome do |cb| %>
          <% cb.label(class: "checkbox-inline input_checkbox") { cb.check_box( class: "checkbox") + cb.text } %>
        <% end %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= form.submit 'Salvar', class: "btn btn-primary btn-lg" %>
        <%= link_to "Cancelar", artigos_path, class: "btn btn-default btn-lg" %>
      </div>
    </div>
  <% end %>
</div>
</div>