<h1>Signup Alpha Blog/Bug</h1>
<%= render "shared/errors", obj: @user %>
<div class="row">
  <div class="col-xs-12">
  <%= form_for( @user, :html => {class: "form-horizontal", role: "form" }) do |form| %>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= form.label :username, 'Usuário' %>
      </div>
      <div class="control-label col-sm-8">
        <%= form.text_field :username, class: "form-control", placeholder: "Nome do Usuário", autofocus: true %>  
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= form.label :email, 'E-mail' %><br/>
      </div>
       <div class="control-label col-sm-8">
        <%= form.text_field :email, class: "form-control", placeholder: "E-mail" %>  
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= form.label :password, 'Senha' %><br/>
      </div>
       <div class="control-label col-sm-8">
        <%= form.password_field :password, class: "form-control", placeholder: "Senha" %>  
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= form.submit 'Sign Up', class: "btn btn-primary btn-lg" %>
        <%= link_to "Cancelar", artigos_path, class: "btn btn-default btn-lg" %>
      </div>
    </div>
  <% end %>
</div>
</div>